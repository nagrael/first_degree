# "mathematics is not yet ready for such problems"

int c = 65735346575434578;
int iter = 0;


int step(int c, int div, int mul, int add) {
    if (c % 2 == 0)
        return c / div;
    else
        return mul * c + add;
}

repeat {
    c = step(c, 2, 3, 1);
    iter = iter + 1;
} until c == 1;

print "Reached 1 after";
print iter;
print "iterations";
